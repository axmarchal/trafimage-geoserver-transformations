<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0"
xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc"
xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <NamedLayer>
    <Name>g_stacker</Name>
    <UserStyle>
      <Title>AggregateSimilarLinesAsPolygons1</Title>
      <Abstract>A sample style that AggregateSimilarLinesAsPolygons1</Abstract>
      <FeatureTypeStyle>
        <Transformation>
          <ogc:Function name="gs:AggregateSimilarLinesAsPolygons">
            <ogc:Function name="parameter">
              <ogc:Literal>collection</ogc:Literal>
            </ogc:Function>
            
            <ogc:Function name="parameter">
              <ogc:Literal>attributes</ogc:Literal>
              <ogc:Literal>klasse</ogc:Literal>
            </ogc:Function>
            
            <ogc:Function name="parameter">
              <ogc:Literal>offsetAttribute</ogc:Literal>
              <ogc:Literal>rt_offset</ogc:Literal>
            </ogc:Function>  

            <ogc:Function name="parameter">
              <ogc:Literal>maxPolygonWidth</ogc:Literal>
              <ogc:Literal>25</ogc:Literal>
            </ogc:Function>  
          
      <!--
            <ogc:Function name="parameter">
              <ogc:Literal>debugSqlFile</ogc:Literal>
              <ogc:Literal>/tmp/t.sql</ogc:Literal>
            </ogc:Function>  
       -->
          
            <ogc:Function name="parameter">
              <ogc:Literal>widthScalingAlgorithm</ogc:Literal>
              <ogc:Literal>logarithmic</ogc:Literal>
            </ogc:Function>     

            
            <!--
                 the env-function allows access of the WMS url parameters
            -->
            <ogc:Function name="parameter">
              <ogc:Literal>outputBBOX</ogc:Literal>
              <ogc:Function name="env">
                <ogc:Literal>wms_bbox</ogc:Literal>
              </ogc:Function>
            </ogc:Function>
            <ogc:Function name="parameter">
              <ogc:Literal>outputWidth</ogc:Literal>
              <ogc:Function name="env">
                <ogc:Literal>wms_width</ogc:Literal>
              </ogc:Function>
            </ogc:Function>
            <ogc:Function name="parameter">
              <ogc:Literal>outputHeight</ogc:Literal>
              <ogc:Function name="env">
                <ogc:Literal>wms_height</ogc:Literal>
              </ogc:Function>
            </ogc:Function>
            
            
          </ogc:Function>
        </Transformation>
        <Rule>
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#0000FF</CssParameter>
              <CssParameter name="stroke-width"><ogc:PropertyName>agg_count</ogc:PropertyName></CssParameter>
            </Stroke>
          </LineSymbolizer>
          
          
          <PolygonSymbolizer>
           <Fill>
             <CssParameter name="fill">#ff2222</CssParameter>
           </Fill>
          </PolygonSymbolizer>
          
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>agg_count</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">Arial</CssParameter>
              <CssParameter name="font-size">12.0</CssParameter>
              <CssParameter name="font-style">normal</CssParameter>
              <CssParameter name="font-weight">normal</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>
                    <ogc:Literal>0.5</ogc:Literal>
                  </AnchorPointX>
                  <AnchorPointY>
                    <ogc:Literal>0.5</ogc:Literal>
                  </AnchorPointY>
                </AnchorPoint>
                <Rotation>
                  <ogc:Literal>0.0</ogc:Literal>
                </Rotation>
              </PointPlacement>
            </LabelPlacement>
            <Halo>
              <Radius>
                <ogc:Literal>2</ogc:Literal>
              </Radius>
              <Fill>
                <CssParameter name="fill">#FFFFFF</CssParameter>
              </Fill>
            </Halo>
            <Fill>
              <CssParameter name="fill">#000000</CssParameter>
            </Fill>
          </TextSymbolizer>
        </Rule>
      </FeatureTypeStyle>
    </UserStyle>
  </NamedLayer>
</StyledLayerDescriptor>